class Main {
    public static void main(String[] args) {
      int number=378;
      int sum=0;
      while(number>0)
      {
          int temp=number%10;
          sum+=temp;
          number=number/10;
      }
     if(number%sum==0)
     {
         System.out.println("The given number is a Harshad number");
     }
     else
     {
         System.out.println("The given number is a not Harshad number");
     }
    }
}
